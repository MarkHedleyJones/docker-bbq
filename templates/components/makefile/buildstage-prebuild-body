	# Cleaning the packagelist ...
	@mkdir -p $(CURDIR)/build/tmp
	@cat $(CURDIR)/build/packagelist | sort --unique | sed '/^\s*$$/d' > $(CURDIR)/build/tmp/packagelist
	@cp $(CURDIR)/build/tmp/packagelist $(CURDIR)/build/packagelist
	# Detecting Python requirements ...
	@mkdir build/tmp/pip
	@reqs="$(shell ls build | grep "pip[2-3]\?-requirements.txt" | cut -d '-' -f 1 | sed 's/pip/python/')" \
		&& if [ ! -z "$$reqs" ] ; then cd build && cp pip*-requirements.txt tmp/pip && for py in $$reqs ; do \
		printf "$${py}-pip\n$${py}-wheel\n$${py}-setuptools\n" >> tmp/packagelist ; done ; fi
	# Fetching any remote resources ...
	@mkdir -p $(CURDIR)/build/resources
	@if [ -f build/urilist ] ; then cat build/urilist | while read uri ; do \
		wget --no-clobber --directory-prefix build/resources/ $$uri ; done ; fi

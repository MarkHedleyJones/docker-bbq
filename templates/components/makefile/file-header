DOCKER_CMD     := DOCKER_BUILDKIT=1 docker
IMAGE_TAG      := latest
GROUP_ID       := 1000
USER_ID        := 1000
USER_NAME      := root
WORKSPACE_NAME := workspace

# Editing below this line may cause things to break - warranty void if modified!

IMAGE_NAME     := $(shell basename $(CURDIR))
WORKDIR        := $(shell if [ '$(USER_NAME)' == 'root' ]; then echo '/root'; else echo '/home/$(USER_NAME)'; fi)

.PHONY: development
development: pre-build build-development-image post-build

.PHONY: production
production: pre-build build-production-image post-build

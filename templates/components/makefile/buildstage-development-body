	docker build \
		--target development-image \
		--build-arg BASE_IMAGE=$(BASE_IMAGE) \
		--build-arg WORKDIR=$(WORKDIR) \
		--tag $(IMAGE_NAME):$(IMAGE_TAG) \
		.
	@echo "This file enables automatic workspace mounting during development" > .docker-bbq
	@echo "Development image built - automatic workspace mounting enabled for $(IMAGE_NAME)"

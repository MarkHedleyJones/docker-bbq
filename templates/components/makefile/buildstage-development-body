	@printf "# This file is automatically generated and should not be edited manually\\n" > .docker-bbq
	@printf "MOUNT_WORKSPACE=True\\nPRIVILEGED=True\\nWORKSPACE_NAME=$(WORKSPACE_NAME)\\nWORKSPACE_PATH=$(WORKDIR)" >> .docker-bbq

# Add executable to build ROS2 workspace (cb)
USER root
RUN echo "#!/usr/bin/env bash\nset -e\ncd ${WORKSPACE}\ncolcon build \
  --parallel-workers \$(nproc)\nretcode=\$?\nCOLCON_TRACE=\nsource install/setup.bash\ncd - \
  > /dev/null\nexit \${retcode}" > /usr/bin/cb && chmod +x /usr/bin/cb
# Source ROS2 development workspace (when using docker run or docker exec)
RUN echo "if [[ -f ${WORKSPACE}/install/setup.bash ]]; then\n\
  source  ${WORKSPACE}/install/setup.bash\n\
  fi" | tee --append ${HOME}/.bashrc /ros_entrypoint.sh && sed -i '/exec "$@"/d' \
  /ros_entrypoint.sh && echo 'exec "$@"' >> /ros_entrypoint.sh;
USER $USER_NAME